    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/wizard")
<script type="text/javascript">

        $(document).ready(function () {
            var options = {
                contentHeight: 400,
                contentWidth: 700,
            };
            var wizard = $("#wizard").wizard(options);

            wizard.on('closed', function () {
                wizard.reset();
            });

            wizard.on('decrementCard', function () {
                $('.btn .wizard-next').removeClass('btn-danger');
                var activeCard = wizard.getActiveCard();
                if (activeCard.name === 'codigoDeReservacion') {
                    wizard.changeNextButton('No tengo codigo de reservacion', 'btn-danger');
                }
                if (activeCard.name === 'reservacionDeGrupo') {
                    wizard.changeNextButton('No reservar para grupo', 'btn-danger');
                }
            });

            wizard.on('incrementCard', function () {
                $('.btn .wizard-next').removeClass('btn-danger');
                var activeCard = wizard.getActiveCard();
                if (activeCard.name === 'codigoDeReservacion') {
                    wizard.changeNextButton('No tengo codigo de reservacion', 'btn-danger');
                }
                if (activeCard.name === 'reservacionDeGrupo') {
                    wizard.changeNextButton('No reservar para grupo', 'btn-danger');
                }
            });

            $('#open-wizard').click(function (e) {
                e.preventDefault();
                wizard.reset();
                wizard.show();
            });
        });

    </script>
}